#!/usr/bin/env bash

## \brief Control the flow of your loops (pause/resume/etc.).

source $(shellm-core-path)
shellm-source shellm/loop

if [ $# -eq 0 ]; then
  doc --print-usage "$0"
  exit 1
fi

main() {
  case "$1" in
    ## \option -h, --help
    ## Print this help and exit.
    -h|--help) doc --print-help "$0"; exit 0 ;;
  esac

  loop "$@"
}

## \usage loop [-h]
main "$@"
