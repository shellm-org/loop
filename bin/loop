#!/usr/bin/env bash

## \brief Control the flow of your loops (pause/resume/etc.).

shellm-include shellm/shellman/lib/shellman.sh

[ $# -eq 0 ] && shellman_usage

main() {
  case "$1" in
    ## \option -h, --help
    ## Print this help and exit.
    -h|--help) shellman "$0"; exit 0 ;;
  esac
}

## \usage loop [-h]
main "$@"
